//-расширяет(наследует) исходный шаблон от tamplate.pug
extends ../template

//-блок переменных, подставляем переменнуб title в наследуемый шаблон
block variables
    - var title = 'Обо мне'

block content
    //- //-инклюды это аналог import в CSS
    //- include ../common/technologies.pug

    section.section.hero
        //позиционирование внутренних элементов(блоков)
        .hero__socials
            //блок без позиционирования. сделать потом миксином.
            ul.socials 
                each item in ['vk', 'tw', 'in']
                    li.socials__item
                        a(href=`${item}`).socials__link

        //миксин. позиционирование .humburger  вешаем на класс .hero__menu
        a(href="").humburger.hero__menu

        .hero__title
            .section-title
                img.section-title__pic
            //миксин. позиционирование для элемента .hero__user //блок .user без позиционирования
            .hero__user.user
                .user__pic
                    img.user__pic-img
                .user__info
                    .user__name Владимир Астахов
                    .user__data Личный сайт разработчика

        //миксин. позиционирование .hero__arrow  а отображение через класс .arrow__down
        .hero__arrow.arrow__down

    section.section.about
        .about__left
            //треугольники позицианируем position: absolute   -top
            .about__triangle.about__triangle_left
                //название класса .triangle_fill_white только когда меняем одно свойство!
                svg.triangle.triangle_fill_white
            .about__left-title
                .block-title Обо мне

            .about__left-content
                .user-description
                    .user-description__image
                        img.user-description__avatar
                    .user-description__title
                        .block-subtitle Кто я
                        //стилизуем  блок с классом .text-block .Для позиционирования .user-description__text
                    .user-description__text.text-block      
                        p Я веб разработчик из Новосибирска
                        p Я веб разработчик из Новосибирска

        .about__right
            //треугольники позицианируем position: absolute   -top
            .about__triangle.about__triangle_right
                //название класса .triangle_fill_beige только когда меняем одно свойство!
                svg.triangle.triangle_fill_beige
            //использование миксина (.block-subtitle)
            .about__right-title.block-subtitle Чем я могу быть вам полезен   
            .user__right-description.text-block 
                p Больше всего меня привлекет Frontend разработка, но я также знаком и могу решать не сложные задачи на Backend. Но давайте по порядку.
            .about__right-content       
                ul.skills-list
                    each item in ['Frontend', 'Backend', 'Workflow']
                        li.skills-list__item
                            .skills-row
                                .skills-row__title #{item}
                                ul.skills-row__list
                                    li.skills-row__item
                                        .skill
                                            svg.skill__circle
                                            .skill__title

    section.section.map
        .google-map
        .map-data
            .contacts
                .contacts__title
                    .block-subtitle Контакты
                ul.contacts__list
                    -
                        var contacts = [
                            ['skype', 'skype_kdn'],
                            ['mail', 'astakhov@gmail.com'],
                            ['tel', '+7 966 0407017'],
                            ['adress', 'г.Новосибирск']
                        ]
                    each item in contacts
                        //стилизуем  блок с классом .contacts__row .Для позиционирования .contacts__item
                        li.contacts__item.contacts__row
                            .contacts-row__icon #{item[0]}
                            .contacts-row__title #{item[1]}

    footer.footer 
        .footer__row
            .footer__col
                .foter__menu
                    //можно и без nav , только со списком. Но он нужен для семантики
                    //nav.menu сделать миксином и использовать в полноэкранном меню, для стилизации использовать nav.menu.menu_vertical . но зависимость как исключение
                    nav.menu
                        ul.menu__list
                            each item in ['Мои работы', 'Обо мне', 'Блог', 'Авторизация']
                                li.menu__item 
                                    a(href="").menu__link #{item}
            .footer__col
                //модификатор .socials_rounded
                ul.socials.socials_rounded
                    each item in ['vk', 'tw', 'in']
                        li.socials__item
                            a(href=`${item}`).socials__link
                .footer__social
        .footer__row
            .footer__col
                .footer__text
                    p Lorem ipsum dolor sit amet consectetur, adipisicing elit. Id, maxime corrupti, itaque, reprehenderit ipsum nulla harum iusto repudiandae facere fuga porro eos aut sed in magnam! Debitis quam aliquam magni.
            .footer__col
                .footer__text
                    p Lorem ipsum dolor sit amet.